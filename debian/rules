#!/usr/bin/make -f
# Sample debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This is the debhelper compatability version to use.
export DH_COMPAT=3
export DEBIAN=1
export PACKAGE=libfidoconf0

# Next Line to build debug-versions !
# export DEB_BUILD_OPTIONS=nostrip

# shared library versions, option 1
version=0.14
major=0

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	# Add here commands to compile the package.
	$(MAKE)
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	# Add here commands to clean up after the build process.
	-$(MAKE) distclean
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	# Add here commands to install the package into debian/tmp
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp

# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_movefiles
#	dh_installdebconf	
	dh_installdocs
	dh_installexamples
#	dh_installmenu
#	dh_installcron
	dh_installman
	# And now a few symlinks :)
	cd debian/fidoconf-runtime/usr/share/man/man1 ;\
	ln -s fconf2.1 fconf2areasbbs.1 ;\
	ln -s fconf2.1 fconf2aquaed.1 ;\
	ln -s fconf2.1 fconf2golded.1 ;\
	ln -s fconf2.1 fconf2msged.1 ;\
	ln -s fconf2.1 fconf2fidogate.1 ;\
	ln -s fconf2.1 fconf2squish.1 ;\
	ln -s fconf2.1 fecfg2fconf.1
	dh_installinfo
#	dh_undocumented
	dh_installchangelogs ChangeLog
	rm -rf $(CURDIR)/debian/libfidoconf0-dev/usr/share/doc/libfidoconf0-dev
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_makeshlibs
	dh_installdeb
#	dh_perl
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
